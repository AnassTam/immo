<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
            <link rel="stylesheet"  href="{{asset('css/style.css') }}">
        {% endblock %}

 </head>
 <body>
 <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
 <div class="container">
     <a class="navbar-brand" href="#">Agence immobili√®re</a>
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu">
         <span class="navbar-toggler-icon"></span>
     </button>

     <div class="collapse navbar-collapse" id="menu">
         <ul class="navbar-nav mr-auto">
             <li class="nav-item {{ app.request.get('_route')=='homepage'? 'active' }}">
                 <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
             </li>
             <li class="nav-item active{{ app.request.get('_route')=='property-list'? 'active' }}" >
                 <a class="nav-link" href="{{ path('real_estate_list') }}">Annonces</a>
             </li>
         </ul>
         <form method="get" class="form-inline">
             <input  id ="search" type="text" class="form-controle mr-2" placeholder="Recherche un lien...">
             <button class="btn btn-outline-light">Recherche</button>

         </form>
     </div>


 </div>
 </nav>

 <div class="container">
     {% for label, messages in app.flashes %}
     {% for message in messages %}
         <div class="alert alert-{{ label }} -m4">
             {{ message }}
         </div>

     {% endfor %}
     {% endfor %}


      {% block body %}
      {% endblock %}
  </div>


        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.5.1.min.js" ></script>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src ="{{asset('js/script.js') }}"></script>
        {% endblock %}



    </body>
</html>
