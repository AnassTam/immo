{% extends 'base.html.twig' %}
{% block body %}
    <div class="row py-4" xmlns="http://www.w3.org/1999/html">
       <div class="col-log-6">
           <img src="{{ asset('img/uploads/' ~ property.image) }}" alt="{{ property.title }}" class="card-img">
       </div>
       <div class="col-log-6">
           <h1> {{ title }}</h1>
           <p class="property-price text-primary">
               <strong>{{ property.price }} € </strong>
               </p>
       </div>
   </div>

    <div class="py-4">
        <div class="mb-4">
            {{ property.description }}
        </div>

        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Caractéristique</th>
                        <th> </th>
                    </tr>
                </thead>

                <tbody>
                <tr>
                    <td>surface habitable</td>
                    <td>{{ property.surface }}m²</td>
                </tr>
                <tr>
                    <td>Nombre de pièces</td>
                    <td>{{ property.rooms }} ({{ property.displayableRooms }})</td>
                </tr>
<tr>
                    <td>Type de bien </td>
                    <td>{{ property.type.name |capitalize}}</td>
                </tr>

                </tbody>
                </table>


            </div>
            </div>
            </div>









{% endblock %}