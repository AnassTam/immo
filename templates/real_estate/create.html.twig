            <div id="reglementation" class="container tab-pane fade"><br>
                    <h3>Réglementation</h3>
                    <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium,
                        totam rem aperiam.</p>
                </div>
            <div id="comentaire" class="container tab-pane fade"><br>
                    <h3>Commentaire</h3>
                {{ form_row(realEstateForm.description) }}

                </div>
            <div id="photos" class="container tab-pane fade"><br>
                    <h3>Photos</h3>
                {{ form_row(realEstateForm.image) }}
                </div>
            </div>
        </div>


    </div>

    <div class="row" style="background-color: #F8F9FA">
