<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet"  href="{{asset('css/style.css') }}">
    {% endblock %}

</head>
<body >
{# la nav barre #}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class="navbar-brand" href="{{ path('homepage') }}">Accueil</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="menu">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item {{ app.request.get('_route')=='homepage'? 'active' }}">
                    <a class="nav-link" href="{{ path('homepage') }}">A propos </a>
                </li>
                <li class="nav-item dropdown active{{ app.request.get('_route')=='property-list'? 'active' }}"  >

                    <a class="nav-link dropdown-toggle"  href="{{ path('real_estate_list') }}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >Annonces</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                        <a class="dropdown-item" href=" {{ path('tous_les_biens_typeDuBien',{title:'maison'}) }} "> Maison</a>
                        <a class="dropdown-item" href=" {{ path('tous_les_biens_typeDuBien',{title:'Appartement'}) }} "> Appartement</a>
                        <a class="dropdown-item" href=" {{ path('tous_les_biens_typeDuBien',{title:'Villa'}) }} "> Villa</a>
                        <a class="dropdown-item" href=" {{ path('tous_les_biens_typeDuBien',{title:'Studio'}) }} "> Studio</a>
                    </div>
                </li>
                <li class="nav-item {{ app.request.get('_route')=='homepage'? 'active' }}">
                    <a class="nav-link" href="{{ path('real_estate_create') }}">Déposer une annonce </a>
                </li>
            </ul>
        </div>

    </div>
            <form method="get" class="form-inline">
                <input  id ="search" type="text" class="form-controle mr-2" placeholder="Recherche un bien...">
            </form>
       {#   <form method="get" class="form-inline">
                <input  id ="search" type="text" class="form-controle mr-2" placeholder="Recherche par ville ou region ...">
            </form> #}


            <ul class="navbar-nav ml-auto">
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" data-toggle="dropdown">
                            {{app.user.username }}
                        </a>
                        <div class="dropdown-menu" >
                            <a class="dropdown-item" href="{{ path('my_real_estate') }}">Mes annonces</a>


                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="dropdown-item" href="{{ path('admin') }}">Administration</a>
                            {% endif %}
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{path('app_logout')}}">Déconnexion</a>
                        </div>
                    </li>
                {% else %}
                    <li class ="nav-item {{ app.request.get('_route')=='app_register'?'active'}}">
                        <a class="nav-link" href="{{ path('app_register')}}">Inscription</a>
                    </li>
                    <li class ="nav-item {{ app.request.get('_route')=='app_login'?'active'}}">
                        <a class="nav-link" href="{{ path('app_login')}}">Connexion</a>
                    </li>

                {% endif %}
                {#  <li class ="nav-item active">
                    <a class="btn btn-light" href = "{{ path('cart_index') }}"> Panier ({{ cart.count }}) </a>
                </li #}

            </ul>
        </div>


    </div>
</nav>
{#  fin de la nav barre #}


    {% block page_base %}
    {% endblock %}  

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" ></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src ="{{asset('js/script.js') }}"></script>
{% endblock %}



</body>
</html>
