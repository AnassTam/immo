                    {{ form_row(realEstateForm.eauChaude) }}
                    {{ form_row(realEstateForm.chauffage) }}
                    {{ form_row(realEstateForm.etatDuBien) }}
                    {{ form_row(realEstateForm.anneeConstruction) }}
                    {{ form_row(realEstateForm.anneeRenovation)}}
                    {{ form_row(realEstateForm.styleDubien)}}
