{% extends 'base.html.twig' %}

{% block title %}Mon panier - {{ parent() }}{% endblock %}

{% block body %}
<h1 class="text-center">Mon panier</h1>
    <table class="table table-light shadow">
        <thead>
        <tr>
            <th>Image</th>
            <th>Nom</th>
            <th>Prix</th>
        </tr>
        </thead>
        <tr>
        {% for item in items %}
        <tr>
            <td>
            <img width="100" class="img-fluid" src="{{ asset('img/uploads/' ~ item.image) }}" alt="{{ item.title }}">

            </td>

            <td>
                {{ item.title }}

            </td>>
            <td>
                {{ item.price }}

            </td>
            <td>

            <a href="{{ path('cart_remove', {id: item.id}) }}" class ="btn btn-danger">Supprimer</a>
            </td>


        </tr>

        {% endfor %}
        <tr>
            <td></td>
            <td>Total: </td>
            <td>{{ cart.total() }} euros</td>
        </tr>
        </tbody>
    </table>
    <div class="text-center mt-5">
       <a  class = "btn btn-primary" href="#">Payer</a>
    </div>
{% endblock %}
